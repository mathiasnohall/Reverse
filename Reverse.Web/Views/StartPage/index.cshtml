@model Reverse.Web.ViewModels.Pages.PageViewModel

@{
    Layout = "~/Views/Shared/Layouts/_Root.cshtml";
}

<div class="container">
    <div ng-cloak ng-controller="statusController">
        <h1>{{greeting}}</h1>
    </div>
    
    <div ng-cloak ng-controller="reverseController">
        <form name="reverseForm"
              ng-submit="formInput.$valid && submitForm(formInput)"
              nonvalidate>

            <div class="form-group col-xs-12">
                <label for="name-input">String to reverse</label>
                <input class="form-control"
                       id="string-input"
                       ng-model="formInput.string"
                       placeholder="type string here"
                       required
                       type="text"
                       autofocus>
            </div>

            <div class="form-group col-xs-12">
                <button class="btn btn-primary"
                    ng-disabled="formInput.$invalid"
                    type="submit">
                    Reverse
                </button>
            </div>
        </form>
    </div>
</div>

